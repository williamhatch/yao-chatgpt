{
  "name": "::AI Conversation Message",
  "action": {
    "bind": {
      "model": "ai.message",
      "option": {
        "withs": {
          "model": {}
        }
      }
    }
  },
  "layout": {
    "actions": [
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "name": "Delete",
            "payload": {
              "model": "ai.message"
            },
            "type": "Form.delete"
          }
        ],
        "confirm": {
          "desc": "请确认删除，删除后数据无法恢复",
          "title": "确认"
        },
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ],
    "form": {
      "sections": [
        {
          "columns": [
            {
              "name": "会话ID",
              "width": 6
            },
            {
              "name": "消息长度",
              "width": 6
            },
            {
              "name": "用户",
              "width": 12
            },
            {
              "name": "创建时间",
              "width": 12
            },
            {
              "name": "消息",
              "width": 24
            }
          ]
        }
      ]
    }
  },
  "fields": {
    "form": {
      "消息": {
        "bind": "message",
        "edit": {
          "props": {
            "autoSize": {
              "maxRows": 20,
              "minRows": 5
            },
            "placeholder": "请输入 回答"
          },
          "type": "TextArea"
        }
      }
    }
  }
}